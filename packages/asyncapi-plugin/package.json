{
  "name": "@qraft/asyncapi-plugin",
  "version": "1.0.0",
  "packageManager": "yarn@4.0.2",
  "type": "module",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production rollup --config rollup.config.mjs && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "dev": "rollup --config rollup.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "clean": "rimraf dist/",
    "write-package-version-file": "yarn exec ../../write-package-version-file.sh"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "dependencies": {
    "@qraft/plugin": "workspace:*",
    "ansi-colors": "^4.1.3",
    "commander": "^14.0.2",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@asyncapi/parser": "^3.4.0",
    "@openapi-qraft/eslint-config": "workspace:*",
    "@openapi-qraft/rollup-config": "workspace:*",
    "@types/node": "^20.16.5",
    "eslint": "^9.39.1",
    "memfs": "^4.11.1",
    "rimraf": "^6.1.2",
    "rollup": "~4.22.5",
    "rollup-plugin-rename-node-modules": "^1.3.1",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist",
    "src",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!src/**/__snapshots__/**",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenAPI-Qraft/openapi-qraft.git",
    "directory": "packages/asyncapi-plugin"
  }
}

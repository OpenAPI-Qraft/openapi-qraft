  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "prettier": "^3.3.3",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2"
  },
  "workspaces": [
    "packages/*",
    "playground",
    "e2e",
    "website"
  ],
  "packageManager": "yarn@4.9.1",
  "resolutions": {
    "ts-morph@npm:^17.0.1": "patch:ts-morph@npm%3A17.0.1#~/.yarn/patches/ts-morph-npm-17.0.1-6097358fba.patch"

{
  "name": "qraft",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:qraft": "turbo run dev --filter '@openapi-qraft/*'",
    "test": "turbo run test --continue --output-logs=new-only",
